<UserControl x:Class="LibraryBooks.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="434" Height="41">
    <Grid x:Name="LayoutRoot">
        <Canvas HorizontalAlignment="Stretch" Height="41" VerticalAlignment="Top" >

            <HyperlinkButton Height="41" Width="42" Canvas.Left="375"  NavigateUri="/Home">
                <HyperlinkButton.Content>
                    <Image Source="../Images/Menu/menuBack1.png"/>
                </HyperlinkButton.Content>

            </HyperlinkButton>

            <HyperlinkButton Height="41"  Width="41" Canvas.Left="300"  NavigateUri="/About">
                <HyperlinkButton.Content>
                    <Image Source="../Images/Menu/menuContact1.png"/>
                </HyperlinkButton.Content>
            </HyperlinkButton>

            <HyperlinkButton Height="41" Width="44" Canvas.Left="225"  NavigateUri="/LibraryBooks;component/Library.dyn.xaml">
                <HyperlinkButton.Content>
                    <Image Source="../Images/Menu/menuLibrary1.png"/>
                </HyperlinkButton.Content>
            </HyperlinkButton>

            <HyperlinkButton Height="41"  Width="42" Canvas.Left="155"  NavigateUri="/Help">
                <HyperlinkButton.Content>
                    <Image Source="../Images/Menu/menuHelp1.png"/>
                </HyperlinkButton.Content>
            </HyperlinkButton>

            <HyperlinkButton Height="41" Width="54" Canvas.Left="15"  NavigateUri="/Studying;component/StudyingPage.dyn.xaml">
                <HyperlinkButton.Content>
                    <Image Source="../Images/Menu/menuStudying1.png" Stretch="Fill"></Image>
                </HyperlinkButton.Content>
            </HyperlinkButton>

            <HyperlinkButton Height="41"  Width="28" Canvas.Left="85"  NavigateUri="/Tools">
                <HyperlinkButton.Content>
                    <Image Source="../Images/Menu/menuTools1.png"/>
                </HyperlinkButton.Content>
            </HyperlinkButton>

        </Canvas>
    </Grid>
</UserControl>
