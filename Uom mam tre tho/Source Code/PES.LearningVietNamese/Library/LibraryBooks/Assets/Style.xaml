<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FFFF4400"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="InfoLBTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Blue"/>
        <Setter Property="FontSize" Value="11"/>
    </Style>

    <Style x:Key="InfoTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FFFF4400"/>
        <Setter Property="FontSize" Value="11"/>
    </Style>

    <Style x:Key="BookCaseRectangleStyle" TargetType="Rectangle">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Opacity="0.52" ShadowDepth="3" BlurRadius="9"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Fill">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFF9600" Offset="0"/>
                    <GradientStop Color="#FF492B00" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="BookCaseRectangle1Style" TargetType="Rectangle">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Opacity="0.52" ShadowDepth="3" BlurRadius="9"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Fill">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.929,0.555" StartPoint="0.003,0.555">
                    <GradientStop Color="#FFFF9600"/>
                    <GradientStop Color="#FF492B00" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
